				<visible>!Window.IsActive(startup)</visible>
				<include>Animation_Dialog_Popup_Window</include>
				<include>Animation_Dialog_Popup_Visible</include>
				<control type="image">
					<texture colordiffuse="$VAR[GlowColorVar]" border="20">dialogs/scan-glow.png</texture>
				</control>
				<control type="image">
					<texture colordiffuse="$VAR[PanelColorVar]" border="20">dialogs/scan-back.png</texture>
