					<left>150</left>
					<width>530</width>
					<height>110</height>
					<align>center</align>
					<control type="fadelabel" id="401">
						<description>Line 1 Label</description>
						<height>40</height>
						<font>Font29_Cond</font>
					</control>
					<control type="textbox" id="402">
						<description>Line 2 Label</description>
						<height>40</height>
						<textcolor>grey</textcolor>
